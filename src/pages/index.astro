---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import webdesignImage from '../assets/images/webdesign.jpg';
import annaImage from '../assets/images/testimonials/anna.jpg';
import kasiaImage from '../assets/images/testimonials/kasia.jpg';
import marekImage from '../assets/images/testimonials/marek.jpg';


const title = "Profesjonalne Projektowanie Stron dla Polskich Firm w UK | WebDesign UK";
const description = "Nowoczesne strony internetowe dla polskich firm w Wielkiej Brytanii. Responsywne projekty, które pomogą Twojej firmie się rozwinąć. Skontaktuj się z nami już dziś!";

const services = [
  {
    color: 'blue' as const,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`,
    title: 'Strony Internetowe',
    description: 'Nowoczesne, responsywne strony internetowe, które wyglądają świetnie na każdym urządzeniu.',
    features: ['Responsywny Design', 'Szybkie Ładowanie', 'Przyjazne SEO']
  },
  {
    color: 'purple' as const,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
    </svg>`,
    title: 'Sklepy Internetowe',
    description: 'Profesjonalne sklepy online z intuicyjnym systemem zarządzania i płatności.',
    features: ['System Płatności', 'Panel Administracyjny', 'Integracje API']
  },
  {
    color: 'teal' as const,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`,
    title: 'Optymalizacja SEO',
    description: 'Zwiększ widoczność swojej strony w wynikach wyszukiwania i przyciągnij więcej klientów.',
    features: ['Analiza Keywords', 'Optymalizacja Treści', 'Monitoring Wyników']
  }
];

const testimonials = [
  {
    name: "Anna Kowalska",
    role: "Właścicielka, Polski Sklep 'Smak Domu'",
    image: annaImage,
    content: "Współpraca z WebDesign UK to czysta przyjemność. Profesjonalne podejście, świetna komunikacja po polsku i terminowa realizacja. Nasz sklep internetowy przeszedł nasze najśmielsze oczekiwania!",
    rating: 5,
    location: "Manchester, UK"
  },
  {
    name: "Marek Nowicki",
    role: "Dyrektor, Nowicki Construction Ltd",
    image: marekImage,
    content: "Doceniam przede wszystkim wsparcie po uruchomieniu strony. Zespół zawsze służy pomocą i szybko reaguje na wszystkie prośby. Polecam każdej polskiej firmie w UK!",
    rating: 5,
    location: "London, UK"
  },
  {
    name: "Katarzyna Wiśniewska",
    role: "Szefowa, Restauracja 'Swojsko'",
    image: kasiaImage,
    content: "Dzięki nowej stronie i systemowi rezerwacji online nasza restauracja notuje rekordową liczbę gości. Profesjonalizm i zrozumienie potrzeb klienta na najwyższym poziomie.",
    rating: 5,
    location: "Birmingham, UK"
  }
];
---

<Layout title={title} description={description}>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="pt-32 lg:pt-40 pb-20 lg:pb-32 relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="circle circle-1 animate-float-1"></div>
      <div class="circle circle-2 animate-float-2"></div>
      <div class="circle circle-3 animate-float-3"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left">
          <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6 animate-fade-down backdrop-blur-sm">
          Twoja Wizja, Nasza Realizacja
        </span>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-800 mb-8 leading-tight tracking-tight">
            Twoja Firma Zasługuje na <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">Najlepszą</span> Stronę Internetową
        </h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-12 animate-fade-up max-w-3xl leading-relaxed">
          Tworzymy nowoczesne strony internetowe, które pomagają polskim firmom odnieść sukces na brytyjskim rynku
        </p>
          <div class="flex flex-col sm:flex-row gap-6">
          <a 
            href="#contact" 
              class="group bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700 text-white px-10 py-4 rounded-xl font-medium transition-all hover:scale-105 hover:shadow-xl shadow-lg shadow-primary-500/10"
          >
              <span class="relative inline-flex items-center">
            Rozpocznij Projekt
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
          </a>
          <a 
            href="/portfolio" 
              class="group glass text-gray-900 px-10 py-4 rounded-xl font-medium transition-all hover:scale-105 hover:shadow-xl shadow-lg shadow-gray-500/5 border border-white/20"
          >
            Zobacz Realizacje
          </a>
          </div>
        </div>

        <!-- Right Image -->
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-10 group-hover:opacity-30 transition duration-1000"></div>
          <div class="relative animate-float-hero">
            <Image 
              src={webdesignImage}
              alt="Web Design"
              class="rounded-2xl shadow-2xl w-full object-cover"
              width={800}
              height={600}
              quality="max"
              loading="lazy"
            />
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-tr from-gray-900/5 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 lg:py-32 relative bg-gray-50">
    <div class="absolute inset-0 bg-gradient-to-br from-white via-gray-50 to-gray-100/50"></div>
    
    <div class="container mx-auto px-4 relative">
      <div class="text-center mb-16">
        <span class="inline-flex items-center gap-2 px-6 py-2 rounded-full bg-blue-100/80 text-blue-700 text-sm font-medium">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          Nasze Usługi
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold mt-6 mb-4">
          Co Możemy Dla Ciebie Zrobić?
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Oferujemy kompleksowe rozwiązania internetowe dostosowane do potrzeb Twojej firmy
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service) => (
          <ServiceCard 
            color={service.color}
            icon={service.icon}
            title={service.title}
            description={service.description}
            features={service.features}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-blue-50/30"></div>
    <div class="container mx-auto px-4 relative">
      <div class="text-center reveal">
        <span class="inline-block px-4 py-1 rounded-full bg-primary-100 text-primary-700 text-sm font-medium mb-4">
          Dlaczego My?
        </span>
        <h2 class="text-3xl md:text-4xl font-bold mb-12 gradient-text">Co Nas Wyróżnia?</h2>
      </div>
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">10+ Lat Doświadczenia</h3>
          <p class="text-gray-600">Setki zadowolonych klientów w UK</p>
        </div>
        
        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Szybka Realizacja</h3>
          <p class="text-gray-600">Terminowa realizacja projektów</p>
        </div>

        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Wsparcie po Polsku</h3>
          <p class="text-gray-600">Komunikacja w Twoim języku</p>
        </div>

        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Konkurencyjne Ceny</h3>
          <p class="text-gray-600">Przystępne pakiety usług</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Carousel -->
  <section class="py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50/30"></div>
    <div class="container mx-auto px-4 relative">
      <div class="text-center mb-16">
        <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6">
          Opinie Klientów
          </span>
        <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
          Co Mówią o Nas Klienci?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Zobacz, co sądzą o nas polskie firmy, którym pomogliśmy osiągnąć sukces w internecie
        </p>
        </div>
      
      <div 
          x-data="{ 
          currentSlide: 0,
          totalSlides: 3,
          autoplayInterval: null,
          startAutoplay() {
            this.autoplayInterval = setInterval(() => {
              this.nextSlide();
            }, 5000);
          },
          stopAutoplay() {
            clearInterval(this.autoplayInterval);
          },
          nextSlide() {
            this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
          },
          prevSlide() {
            this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
          }
        }"
        x-init="startAutoplay()"
        @mouseenter="stopAutoplay()"
        @mouseleave="startAutoplay()"
        class="relative"
      >
        <!-- Carousel Container -->
        <div class="overflow-hidden relative">
          <div 
            class="flex transition-transform duration-500 ease-out"
            :style="`transform: translateX(-${currentSlide * 100}%)`"
          >
            {testimonials.map((testimonial) => (
              <div class="w-full flex-shrink-0 px-4">
                <div class="max-w-2xl mx-auto">
                  <div class="relative glass p-8 rounded-2xl">
                    <div class="flex items-center gap-4 mb-6">
                      <div class="relative w-16 h-16 rounded-full overflow-hidden">
                        <Image 
                          src={testimonial.image} 
                          alt={testimonial.name}
                          class="w-full h-full object-cover"
                          width={64}
                          height={64}
                          quality="mid"
                          loading="lazy"
                        />
          </div>
                      <div>
                        <h3 class="font-bold text-lg">{testimonial.name}</h3>
                        <p class="text-gray-600 text-sm">{testimonial.role}</p>
                      </div>
          </div>
          
                    <div class="mb-4">
                      {[...Array(testimonial.rating)].map(() => (
                        <svg class="w-5 h-5 text-yellow-400 inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
          </div>
          
                    <blockquote class="text-gray-600 mb-4 text-lg italic">
                      "{testimonial.content}"
                    </blockquote>
                    
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                      </svg>
                      {testimonial.location}
                    </div>
      </div>
    </div>
    </div>
            ))}
          </div>
        </div>
        
        <!-- Navigation Buttons -->
        <button 
          @click="prevSlide()"
          class="absolute left-0 top-1/2 -translate-y-1/2 bg-white/80 p-2 rounded-full shadow-lg hover:bg-white transition-all transform hover:scale-110 backdrop-blur-sm"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
        </button>
        <button 
          @click="nextSlide()"
          class="absolute right-0 top-1/2 -translate-y-1/2 bg-white/80 p-2 rounded-full shadow-lg hover:bg-white transition-all transform hover:scale-110 backdrop-blur-sm"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
        </button>
        
        <!-- Dots Navigation -->
        <div class="flex justify-center mt-8 space-x-2">
          {testimonials.map((_, index) => (
            <button
              @click={`currentSlide = ${index}`}
              class="w-2.5 h-2.5 rounded-full transition-all duration-300"
              :class={`currentSlide === ${index} ? 'bg-primary-600 w-8' : 'bg-gray-300 hover:bg-gray-400'`}
            >
              <span class="sr-only">Slide {index + 1}</span>
            </button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Modern Footer -->
  <Footer slot="footer" />
</Layout>

<style>
  /* Add custom animations */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Enhance gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Enhance glass effect */
  .glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Add these new animations to your existing styles */
  @keyframes gradient-xy {
    0%, 100% {
      background-size: 400% 400%;
      background-position: 0% 0%;
    }
    25% {
      background-size: 300% 300%;
      background-position: 100% 0%;
    }
    50% {
      background-size: 200% 200%;
      background-position: 100% 100%;
    }
    75% {
      background-size: 300% 300%;
      background-position: 0% 100%;
    }
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-gradient-xy {
    animation: gradient-xy 15s ease infinite;
  }

  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }

  .bg-grid-primary {
    background-image: linear-gradient(to right, #2563eb20 1px, transparent 1px),
                      linear-gradient(to bottom, #2563eb20 1px, transparent 1px);
  }

  .bg-grid-secondary {
    background-image: linear-gradient(to right, #4f46e520 1px, transparent 1px),
                      linear-gradient(to bottom, #4f46e520 1px, transparent 1px);
  }

  @keyframes grid-spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(180deg);
    }
  }

  .animate-grid-spin {
    animation: grid-spin 60s linear infinite;
  }

  /* Add rainbow grid background */
  .bg-grid-rainbow {
    background-image: 
      linear-gradient(to right, 
        rgba(37, 99, 235, 0.1) 1px, 
        transparent 1px
      ),
      linear-gradient(to bottom, 
        rgba(168, 85, 247, 0.1) 1px, 
        transparent 1px
      );
  }

  /* Add shimmer effect */
  .shimmer {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 15%,
      transparent 30%
    );
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(5px);
  }

  .circle-1 {
    width: 400px;
    height: 400px;
    left: -100px;
    top: -100px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(147, 51, 234, 0.2) 100%);
    opacity: 0.7;
    animation: float-1 15s infinite ease-in-out;
  }

  .circle-2 {
    width: 300px;
    height: 300px;
    right: -50px;
    top: 20%;
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(244, 63, 94, 0.2) 100%);
    opacity: 0.6;
    animation: float-2 18s infinite ease-in-out;
  }

  .circle-3 {
    width: 250px;
    height: 250px;
    left: 35%;
    bottom: -50px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(168, 85, 247, 0.2) 100%);
    opacity: 0.5;
    animation: float-3 20s infinite ease-in-out;
  }

  .blur-overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(8px);
    z-index: 1;
  }

  @keyframes float-1 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, 20px) scale(1.1); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-20px, 30px) rotate(5deg); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(20px, -20px) scale(1.1); }
  }

  .animate-float-1 { animation: float-1 15s infinite ease-in-out; }
  .animate-float-2 { animation: float-2 18s infinite ease-in-out; }
  .animate-float-3 { animation: float-3 20s infinite ease-in-out; }

  @keyframes float-hero {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-8px) rotate(0.5deg);
    }
    75% {
      transform: translateY(8px) rotate(-0.5deg);
    }
  }

