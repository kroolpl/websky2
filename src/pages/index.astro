---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import webdesignImage from '../assets/images/webdesign.jpg';
import annaImage from '../assets/images/testimonials/anna.jpg';
import kasiaImage from '../assets/images/testimonials/kasia.jpg';
import marekImage from '../assets/images/testimonials/marek.jpg';
import Testimonials from '../components/sections/Testimonials.astro';


const title = "Profesjonalne Projektowanie Stron dla Polskich Firm w UK | WebDesign UK";
const description = "Nowoczesne strony internetowe dla polskich firm w Wielkiej Brytanii. Responsywne projekty, które pomogą Twojej firmie się rozwinąć. Skontaktuj się z nami już dziś!";

const services = [
  {
    color: 'blue' as const,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`,
    title: 'Strony Internetowe',
    description: 'Nowoczesne, responsywne strony internetowe, które wyglądają świetnie na każdym urządzeniu.',
    features: ['Responsywny Design', 'Szybkie Ładowanie', 'Przyjazne SEO']
  },
  {
    color: 'purple' as const,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
    </svg>`,
    title: 'Sklepy Internetowe',
    description: 'Profesjonalne sklepy online z intuicyjnym systemem zarządzania i płatności.',
    features: ['System Płatności', 'Panel Administracyjny', 'Integracje API']
  },
  {
    color: 'teal' as const,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`,
    title: 'Optymalizacja SEO',
    description: 'Zwiększ widoczność swojej strony w wynikach wyszukiwania i przyciągnij więcej klientów.',
    features: ['Analiza Keywords', 'Optymalizacja Treści', 'Monitoring Wyników']
  }
];

const testimonials = [
  {
    name: "Anna Kowalska",
    role: "Właścicielka, Polski Sklep 'Smak Domu'",
    image: annaImage,
    content: "Współpraca z WebDesign UK to czysta przyjemność. Profesjonalne podejście, świetna komunikacja po polsku i terminowa realizacja. Nasz sklep internetowy przeszedł nasze najśmielsze oczekiwania!",
    rating: 5,
    location: "Manchester, UK"
  },
  {
    name: "Marek Nowicki",
    role: "Dyrektor, Nowicki Construction Ltd",
    image: marekImage,
    content: "Doceniam przede wszystkim wsparcie po uruchomieniu strony. Zespół zawsze służy pomocą i szybko reaguje na wszystkie prośby. Polecam każdej polskiej firmie w UK!",
    rating: 5,
    location: "London, UK"
  },
  {
    name: "Katarzyna Wiśniewska",
    role: "Szefowa, Restauracja 'Swojsko'",
    image: kasiaImage,
    content: "Dzięki nowej stronie i systemowi rezerwacji online nasza restauracja notuje rekordową liczbę gości. Profesjonalizm i zrozumienie potrzeb klienta na najwyższym poziomie.",
    rating: 5,
    location: "Birmingham, UK"
  }
];

// Optional: Define custom icons if needed
const customIcons = [
  // ... your custom icons
];
---

<Layout title={title} description={description}>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <!-- Gradient base -->
      <div class="absolute inset-0 bg-gradient-to-b from-white to-blue-50/50 z-0"></div>
      
      <!-- Animated blobs -->
      <div class="absolute inset-0 z-[1]" aria-hidden="true">
        <!-- Contained blobs -->
        <div class="absolute h-[35rem] w-[35rem] top-[5rem] left-[20rem] bg-gradient-to-br from-primary-500/25 to-secondary-500/25 rounded-full mix-blend-multiply blur-[20px] animate-blob"></div>
        <div class="absolute h-[28rem] w-[28rem] top-[15rem] right-[10rem] bg-gradient-to-br from-purple-500/25 to-secondary-500/25 rounded-full mix-blend-multiply blur-[20px] animate-blob animation-delay-2000"></div>
        <div class="absolute h-[25rem] w-[25rem] top-[30rem] left-[5rem] bg-gradient-to-br from-blue-500/25 to-primary-500/25 rounded-full mix-blend-multiply blur-[20px] animate-blob animation-delay-4000"></div>
        <div class="absolute h-[32rem] w-[32rem] top-[20rem] right-[25rem] bg-gradient-to-br from-secondary-500/25 to-purple-500/25 rounded-full mix-blend-multiply blur-[20px] animate-blob animation-delay-6000"></div>
      </div>
      
      <!-- Animated grid pattern -->
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:32px_32px] animate-grid-fade opacity-30 z-[2]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-[5] pt-32 lg:pt-40 pb-20 lg:pb-32">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left">
          <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6 backdrop-blur-sm animate-fade-in-up">
            <span class="inline-flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" 
                />
              </svg>
              Twoja Wizja, Nasza Realizacja
            </span>
          </span>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-800 mb-8 leading-tight tracking-tight">
            <span class="block animate-title-slide-up">Twoja Firma Zasługuje na</span>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600 animate-gradient-text">Najlepszą</span>
            <span class="block animate-title-slide-up delay-200">Stronę Internetową</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-3xl leading-relaxed animate-fade-in-up delay-300">
            Tworzymy nowoczesne strony internetowe, które pomagają polskim firmom odnieść sukces na brytyjskim rynku
          </p>
          <div class="flex flex-col sm:flex-row gap-6 animate-fade-in-up delay-400">
            <a 
              href="#contact" 
              class="group bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700 text-white px-10 py-4 rounded-xl font-medium transition-all duration-300 hover:scale-105 hover:shadow-xl shadow-lg shadow-primary-500/10 relative overflow-hidden"
            >
              <span class="relative z-10 inline-flex items-center">
                Rozpocznij Projekt
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 skew-x-30 translate-x-[-150%] group-hover:translate-x-[150%] transition-transform duration-700"></div>
            </a>
            <a 
              href="/portfolio" 
              class="group glass text-gray-900 px-10 py-4 rounded-xl font-medium transition-all duration-300 hover:scale-105 hover:shadow-xl shadow-lg shadow-gray-500/5 border border-white/20 relative overflow-hidden"
            >
              <span class="relative z-10">Zobacz Realizacje</span>
              <div class="absolute inset-0 bg-gradient-to-r from-primary-100/0 via-primary-100/30 to-primary-100/0 skew-x-30 translate-x-[-150%] group-hover:translate-x-[150%] transition-transform duration-700"></div>
            </a>
          </div>
        </div>

        <!-- Right Image -->
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-10 group-hover:opacity-30 transition duration-1000"></div>
          
          <!-- Decorative elements -->
          <div class="absolute -inset-4 opacity-75 bg-gradient-to-r from-primary-500/10 via-secondary-500/10 to-purple-500/10 blur-2xl rounded-3xl group-hover:opacity-100 transition-opacity duration-700"></div>
          <div class="absolute -inset-2 opacity-50 bg-gradient-to-r from-blue-500/10 via-primary-500/10 to-secondary-500/10 blur-xl rounded-3xl animate-pulse-slow"></div>
          
          <div class="relative rounded-2xl overflow-hidden animate-float-smooth">
            <Image 
              src={webdesignImage}
              alt="Web Design"
              class="rounded-2xl shadow-2xl w-full object-cover transform group-hover:scale-105 transition-all duration-700 group-hover:shadow-primary-500/25 group-hover:shadow-2xl motion-safe:group-hover:rotate-1"
              width={800}
              height={600}
              quality={80}
              loading="eager"
              format="webp"
              densities={[1, 2]}
            />
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-tr from-gray-900/10 via-gray-900/5 to-gray-900/0 group-hover:from-primary-900/10 group-hover:via-secondary-900/5 group-hover:to-purple-900/0 transition-colors duration-700"></div>
            
            <!-- Shine effect -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 bg-gradient-to-r from-transparent via-white/10 to-transparent translate-x-[-150%] group-hover:translate-x-[150%] transition-all duration-1000 ease-out"></div>
          </div>
          
          <!-- Floating dots decoration -->
          <div class="absolute -right-8 -bottom-8 w-24 h-24 bg-primary-500/10 rounded-full blur-xl animate-pulse-slow"></div>
          <div class="absolute -left-6 -top-6 w-20 h-20 bg-secondary-500/10 rounded-full blur-xl animate-pulse-slow animation-delay-2000"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section 
    class="services-section"
    role="region"
    aria-labelledby="services-title"
  >
    <h2 id="services-title" class="sr-only">Nasze Usługi</h2>
    <div class="absolute inset-0 bg-gradient-to-br from-white via-gray-50 to-gray-100/50"></div>
    
    <div class="container mx-auto px-4 relative">
      <div class="text-center mb-16">
        <span class="inline-flex items-center gap-2 px-6 py-2 rounded-full bg-blue-100/80 text-blue-700 text-sm font-medium">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          Nasze Usługi
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold mt-6 mb-4">
          Co Możemy Dla Ciebie Zrobić?
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Oferujemy kompleksowe rozwiązania internetowe dostosowane do potrzeb Twojej firmy
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service) => (
          <ServiceCard 
            color={service.color}
            icon={service.icon}
            title={service.title}
            description={service.description}
            features={service.features}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-blue-50/30"></div>
    <div class="container mx-auto px-4 relative">
      <div class="text-center reveal">
        <span class="inline-block px-4 py-1 rounded-full bg-primary-100 text-primary-700 text-sm font-medium mb-4">
          Dlaczego My?
        </span>
        <h2 class="text-3xl md:text-4xl font-bold mb-12 gradient-text">Co Nas Wyróżnia?</h2>
      </div>
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path strokeborder-b border-gray-100/20 z-50-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">10+ Lat Doświadczenia</h3>
          <p class="text-gray-600">Setki zadowolonych klientów w UK</p>
        </div>
        
        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Szybka Realizacja</h3>
          <p class="text-gray-600">Terminowa realizacja projektów</p>
        </div>

        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Wsparcie po Polsku</h3>
          <p class="text-gray-600">Komunikacja w Twoim języku</p>
        </div>

        <div class="text-center reveal">
          <div class="glass w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 transform hover:rotate-6 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Konkurencyjne Ceny</h3>
          <p class="text-gray-600">Przystępne pakiety usług</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 relative overflow-hidden bg-white">
    <div class="container mx-auto px-4 relative">
      <div class="text-center mb-16">
        <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6">
          Opinie Klientów
        </span>
        <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
          Co Mówią o Nas Klienci?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Zobacz, co sądzą o nas polskie firmy, którym pomogliśmy osiągnąć sukces w internecie
        </p>
      </div>
      
      <Testimonials testimonials={testimonials} />
    </div>
  </section>

  <!-- Modern Footer -->
  <Footer slot="footer" />
</Layout>

<style>
  /* Enhance gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Enhance glass effect */
  .glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Add rainbow grid background */
  .bg-grid-rainbow {
    background-image: 
      linear-gradient(to right, 
        rgba(37, 99, 235, 0.1) 1px, 
        transparent 1px
      ),
      linear-gradient(to bottom, 
        rgba(168, 85, 247, 0.1) 1px, 
        transparent 1px
      );
  }

  /* Add shimmer effect */
  .shimmer {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 15%,
      transparent 30%
    );
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(5px);
  }

  .circle-1 {
    width: 400px;
    height: 400px;
    left: -100px;
    top: -100px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(147, 51, 234, 0.2) 100%);
    opacity: 0.7;
    animation: float-1 15s infinite ease-in-out;
  }

  .circle-2 {
    width: 300px;
    height: 300px;
    right: -50px;
    top: 20%;
    background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(244, 63, 94, 0.2) 100%);
    opacity: 0.6;
    animation: float-2 18s infinite ease-in-out;
  }

  .circle-3 {
    width: 250px;
    height: 250px;
    left: 35%;
    bottom: -50px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(168, 85, 247, 0.2) 100%);
    opacity: 0.5;
    animation: float-3 20s infinite ease-in-out;
  }

  .blur-overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(8px);
    z-index: 1;
  }

  @keyframes float-1 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, 20px) scale(1.1); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-20px, 30px) rotate(5deg); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(20px, -20px) scale(1.1); }
  }

  .animate-float-1 { animation: float-1 12s infinite ease-in-out; }
  .animate-float-2 { animation: float-2 11s infinite ease-in-out; }
  .animate-float-3 { animation: float-3 10s infinite ease-in-out; }

  @keyframes title-slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-text {
    0% {
      background-size: 100%;
      background-position: left;
    }
    50% {
      background-size: 200%;
      background-position: right;
    }
    100% {
      background-size: 100%;
      background-position: left;
    }
  }

  .animate-title-slide-up {
    opacity: 0;
    animation: title-slide-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fade-in-up 0.6s ease-out forwards;
  }

  .animate-gradient-text {
    animation: gradient-text 8s ease infinite;
    background-size: 200% auto;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  .delay-300 {
    animation-delay: 300ms;
  }

  .delay-400 {
    animation-delay: 400ms;
  }

  .skew-x-30 {
    transform: skewX(-30deg);
  }

  @keyframes blob {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    25% {
      transform: translate(50px, -30px) rotate(90deg) scale(1.2);
    }
    50% {
      transform: translate(0, 50px) rotate(180deg) scale(0.8);
    }
    75% {
      transform: translate(-50px, -30px) rotate(270deg) scale(1.1);
    }
    100% {
      transform: translate(0, 0) rotate(360deg) scale(1);
    }
  }

  @keyframes blob1 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      transform: translate(40px, -40px) rotate(120deg) scale(1.3);
    }
    66% {
      transform: translate(-20px, 30px) rotate(240deg) scale(0.9);
    }
    100% {
      transform: translate(0, 0) rotate(360deg) scale(1);
    }
  }

  @keyframes blob2 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      transform: translate(-50px, -30px) rotate(-120deg) scale(0.8);
    }
    66% {
      transform: translate(30px, 40px) rotate(-240deg) scale(1.2);
    }
    100% {
      transform: translate(0, 0) rotate(-360deg) scale(1);
    }
  }

  @keyframes blob3 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      transform: translate(30px, 30px) rotate(60deg) scale(1.1);
    }
    66% {
      transform: translate(-40px, -20px) rotate(180deg) scale(0.85);
