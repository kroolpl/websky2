---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';

const title = "Proces Tworzenia Strony Internetowej | WebDesign UK";
const description = "Poznaj nasz przejrzysty, 4-etapowy proces tworzenia stron internetowych. Od planowania przez projekt i realizację, aż po wdrożenie. Sprawdź jak będziemy współpracować!";
---

<Layout title={title} description={description}>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="pt-32 lg:pt-40 pb-20 lg:pb-32 relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50/90 via-indigo-50/80 to-purple-50/90"></div>
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6 backdrop-blur-sm">
          Nasz Proces
        </span>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8">
          Jak Powstanie Twoja 
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">
            Strona?
          </span>
        </h1>
        <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
          Poznaj nasz sprawdzony proces tworzenia stron internetowych, który gwarantuje sukces Twojego projektu
        </p>
        <Button href="#process" variant="primary">
          <span class="inline-flex items-center justify-center gap-2">
            Zobacz Proces
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="w-5 h-5" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            >
              <path d="m6 9 6 6 6-6"/>
            </svg>
          </span>
        </Button>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section id="process" class="py-24 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50/30"></div>
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    </div>

    <!-- Add these decorative elements inside the Process Section, right after the Background Elements div -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Decorative blobs -->
      <div class="absolute top-1/4 left-0 w-96 h-96 bg-primary-100/30 rounded-full blur-3xl animate-float-slow"></div>
      <div class="absolute top-1/2 right-0 w-96 h-96 bg-secondary-100/30 rounded-full blur-3xl animate-float-slower"></div>
      <div class="absolute bottom-0 left-1/3 w-96 h-96 bg-blue-100/30 rounded-full blur-3xl animate-blob"></div>
      
      <!-- Decorative shapes -->
      <div class="absolute top-20 right-20 w-20 h-20 border-4 border-primary-200/30 rounded-xl rotate-12 animate-float-slow"></div>
      <div class="absolute bottom-40 left-20 w-16 h-16 border-4 border-secondary-200/30 rounded-full animate-float-slower"></div>
      <div class="absolute top-1/2 right-40 w-12 h-12 bg-gradient-to-br from-primary-400/10 to-secondary-400/10 rounded-lg rotate-45"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <!-- Timeline Steps -->
      <div class="relative">
        <!-- Connection Line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1">
          <div class="h-full w-full bg-gradient-to-b from-primary-500/20 via-primary-500/40 to-secondary-500/20 animate-pulse"></div>
          <div class="absolute top-0 left-0 h-full w-full bg-gradient-to-b from-transparent via-white/20 to-transparent animate-shine"></div>
        </div>

        <!-- Steps -->
        <div class="space-y-24">
          <!-- Step 1: Planowanie i projekt -->
          <div class="relative group">
            <div class="flex items-center justify-center mb-8">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-primary-500/20 group-hover:scale-110 transition-transform duration-300 rotate-3 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span class="relative z-10">1</span>
              </div>
            </div>
            
            <div class="relative max-w-3xl mx-auto">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
              <div class="relative glass p-8 rounded-2xl">
                <div class="flex items-center gap-4 mb-6">
                  <svg class="w-8 h-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                  <h3 class="text-2xl font-bold gradient-text">Planowanie i Projekt</h3>
                </div>
                <div class="space-y-4 pl-12">
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Spotykamy się, by poznać Twoje potrzeby i cele - czego oczekujesz od swojej strony?</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Przedstawiamy wycenę i harmonogram prac</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Projektujemy wygląd strony według Twoich preferencji, aż będziesz w pełni zadowolony</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 2: Przygotowanie treści -->
          <div class="relative group">
            <div class="flex items-center justify-center mb-8">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-primary-500/20 group-hover:scale-110 transition-transform duration-300 -rotate-3 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span class="relative z-10">2</span>
              </div>
            </div>
            
            <div class="relative max-w-3xl mx-auto">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
              <div class="relative glass p-8 rounded-2xl">
                <div class="flex items-center gap-4 mb-6">
                  <svg class="w-8 h-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <h3 class="text-2xl font-bold gradient-text">Przygotowanie Treści</h3>
                </div>
                <div class="space-y-4 pl-12">
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Zbieramy potrzebne materiały (teksty, zdjęcia, logo)</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">W razie potrzeby pomożemy w ich przygotowaniu</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Dopracowujemy każdy szczegół zgodnie z Twoją wizją</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 3: Realizacja -->
          <div class="relative group">
            <div class="flex items-center justify-center mb-8">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-primary-500/20 group-hover:scale-110 transition-transform duration-300 rotate-3 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span class="relative z-10">3</span>
              </div>
            </div>
            
            <div class="relative max-w-3xl mx-auto">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
              <div class="relative glass p-8 rounded-2xl">
                <div class="flex items-center gap-4 mb-6">
                  <svg class="w-8 h-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                  <h3 class="text-2xl font-bold gradient-text">Realizacja</h3>
                </div>
                <div class="space-y-4 pl-12">
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Tworzymy stronę zgodnie z zatwierdzonym projektem</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Implementujemy wszystkie potrzebne funkcjonalności</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Testujemy działanie na różnych urządzeniach</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 4: Uruchomienie -->
          <div class="relative group">
            <div class="flex items-center justify-center mb-8">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-primary-500/20 group-hover:scale-110 transition-transform duration-300 -rotate-3 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span class="relative z-10">4</span>
              </div>
            </div>
            
            <div class="relative max-w-3xl mx-auto">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
              <div class="relative glass p-8 rounded-2xl">
                <div class="flex items-center gap-4 mb-6">
                  <svg class="w-8 h-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  <h3 class="text-2xl font-bold gradient-text">Uruchomienie</h3>
                </div>
                <div class="space-y-4 pl-12">
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Uruchamiamy stronę w internecie</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Pokazujemy, jak samodzielnie nią zarządzać</p>
                  </div>
                  <div class="relative pl-8 before:absolute before:left-0 before:top-3 before:h-2 before:w-2 before:rounded-full before:bg-primary-500">
                    <p class="text-gray-600 text-lg">Zapewniamy wsparcie techniczne po uruchomieniu</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Bottom Info Box -->
        <div class="mt-24 relative group max-w-4xl mx-auto">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
          <div class="relative glass p-8 rounded-2xl">
            <h3 class="text-2xl font-bold mb-8 text-center gradient-text">Podczas całego procesu:</h3>
            <div class="grid md:grid-cols-3 gap-8">
              <div class="flex flex-col items-center text-center gap-4 p-4 rounded-xl hover:bg-white/50 transition-colors">
                <svg class="w-10 h-10 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
                <p class="text-gray-600 text-lg">Masz stały kontakt z naszym zespołem</p>
              </div>
              <div class="flex flex-col items-center text-center gap-4 p-4 rounded-xl hover:bg-white/50 transition-colors">
                <svg class="w-10 h-10 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <p class="text-gray-600 text-lg">Na bieżąco konsultujemy z Tobą postępy</p>
              </div>
              <div class="flex flex-col items-center text-center gap-4 p-4 rounded-xl hover:bg-white/50 transition-colors">
                <svg class="w-10 h-10 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <p class="text-gray-600 text-lg">Możesz wprowadzać poprawki na każdym etapie</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50/30"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6">
            FAQ
          </span>
          <h2 class="text-4xl font-bold mb-6">
            Najczęściej Zadawane 
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">
              Pytania
            </span>
          </h2>
        </div>

        <div class="space-y-6">
          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative glass p-8 rounded-2xl">
              <h3 class="text-xl font-bold mb-4">Jak długo trwa cały proces?</h3>
              <p class="text-gray-600">Standardowy czas realizacji to 4-6 tygodni, ale może się różnić w zależności od złożoności projektu i szybkości dostarczenia materiałów.</p>
            </div>
          </div>

          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative glass p-8 rounded-2xl">
              <h3 class="text-xl font-bold mb-4">Czy mogę wprowadzać zmiany w trakcie realizacji?</h3>
              <p class="text-gray-600">Tak, na każdym etapie projektu możesz zgłaszać swoje uwagi i sugestie. Elastycznie podchodzimy do zmian w ramach ustalonego zakresu.</p>
            </div>
          </div>

          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative glass p-8 rounded-2xl">
              <h3 class="text-xl font-bold mb-4">Co jeśli nie mam gotowych treści i zdjęć?</h3>
              <p class="text-gray-600">Nie martw się! Oferujemy pomoc w przygotowaniu profesjonalnych tekstów i doboru odpowiednich zdjęć dla Twojej strony.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto relative">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-600/10 to-secondary-600/10 rounded-2xl blur-2xl"></div>
        <div class="relative glass p-12 rounded-2xl text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 gradient-text">
            Gotowy na Rozpoczęcie Projektu?
          </h2>
          <p class="text-xl text-gray-600 mb-8">
            Skontaktuj się z nami i rozpocznij swoją drogę do sukcesu w internecie
          </p>
          <Button href="/kontakt" variant="cta">
            <span class="inline-flex items-center justify-center gap-2">
              Rozpocznij Projekt
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="w-5 h-5" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round"
              >
                <path d="M7 7h10v10" />
                <path d="M7 17 17 7" />
              </svg>
            </span>
          </Button>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>

<style>
  /* Enhanced animations */
  @keyframes float-slow {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(10px, 15px) rotate(2deg); }
  }

  @keyframes float-slower {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-15px, -10px) rotate(-2deg); }
  }

  @keyframes grid-fade {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.3; }
  }

  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }

  .animate-float-slower {
    animation: float-slower 12s ease-in-out infinite;
  }

  .animate-grid-fade {
    animation: grid-fade 4s ease-in-out infinite;
  }

  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .glass-dark {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .gradient-text {
    @apply text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600;
  }

  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1) rotate(0);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1) rotate(10deg);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9) rotate(-5deg);
    }
  }

  .animate-blob {
    animation: blob 15s infinite ease-in-out;
  }

  /* Add shimmer effect to cards */
  .glass {
    position: relative;
    overflow: hidden;
  }

  .glass::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 200%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: 0.5s;
    opacity: 0;
  }

  .glass:hover::after {
    left: 100%;
    opacity: 1;
  }

  /* Add gradient borders to steps */
  .step-card {
    position: relative;
    background: linear-gradient(white, white) padding-box,
                linear-gradient(to right, var(--tw-gradient-from), var(--tw-gradient-to)) border-box;
    border: 2px solid transparent;
  }

  /* Enhanced glass effect */
  .glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  /* Add subtle animation to bullet points */
  .before\:absolute::before {
    transition: transform 0.3s ease;
  }

  .relative:hover .before\:absolute::before {
    transform: scale(1.2);
  }

  @keyframes shine {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(100%);
    }
  }

  .animate-shine {
    animation: shine 3s linear infinite;
  }
</style> 