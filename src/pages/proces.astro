---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import procesImage from '../assets/images/proces.png';

const title = "Proces Tworzenia Strony Internetowej | WebDesign UK";
const description = "Poznaj nasz przejrzysty, 4-etapowy proces tworzenia stron internetowych. Od planowania przez projekt i realizację, aż po wdrożenie. Sprawdź jak będziemy współpracować!";
---

<Layout title={title} description={description}>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="pt-32 lg:pt-40 pb-20 lg:pb-32 relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50/90 via-indigo-50/80 to-purple-50/90"></div>
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6 backdrop-blur-sm">
            Nasz Proces
          </span>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8">
            Jak Powstanie Twoja 
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">
              Strona?
            </span>
          </h1>
          <p class="text-xl text-gray-600 mb-12 max-w-3xl lg:max-w-none">
            Poznaj nasz sprawdzony proces tworzenia stron internetowych, który gwarantuje sukces Twojego projektu
          </p>
          <Button href="#process" variant="primary">
            <span class="inline-flex items-center justify-center gap-2">
              Zobacz Proces
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="w-5 h-5" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round"
              >
                <path d="m6 9 6 6 6-6"/>
              </svg>
            </span>
          </Button>
        </div>

        <div class="relative group">
          <!-- Decorative elements -->
          <div class="absolute -inset-4 opacity-75 bg-gradient-to-r from-primary-500/10 via-secondary-500/10 to-purple-500/10 blur-2xl rounded-3xl group-hover:opacity-100 transition-opacity duration-700"></div>
          <div class="absolute -inset-2 opacity-50 bg-gradient-to-r from-blue-500/10 via-primary-500/10 to-secondary-500/10 blur-xl rounded-3xl animate-pulse-slow"></div>
          
          <div class="relative rounded-2xl overflow-hidden animate-float-smooth max-w-[512px] mx-auto">
            <Image 
              src={procesImage} 
              alt="Proces projektowania strony" 
              class="rounded-2xl shadow-2xl w-full object-cover transform group-hover:scale-105 transition-all duration-700 group-hover:shadow-primary-500/25 group-hover:shadow-2xl motion-safe:group-hover:rotate-1"
              width={512}
              height={503}
              quality={100}
            />
          </div>
          
          <!-- Floating dots decoration -->
          <div class="absolute -right-8 -bottom-8 w-24 h-24 bg-primary-500/10 rounded-full blur-xl animate-pulse-slow"></div>
          <div class="absolute -left-6 -top-6 w-20 h-20 bg-secondary-500/10 rounded-full blur-xl animate-pulse-slow animation-delay-2000"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section id="process" class="py-24 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50/30"></div>
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Decorative blobs -->
      <div class="absolute top-1/4 left-0 w-96 h-96 bg-primary-100/30 rounded-full blur-3xl animate-float-slow"></div>
      <div class="absolute top-1/2 right-0 w-96 h-96 bg-secondary-100/30 rounded-full blur-3xl animate-float-slower"></div>
      <div class="absolute bottom-0 left-1/3 w-96 h-96 bg-blue-100/30 rounded-full blur-3xl animate-blob"></div>
      
      <!-- Decorative shapes -->
      <div class="absolute top-20 right-20 w-20 h-20 border-4 border-primary-200/30 rounded-xl rotate-12 animate-float-slow"></div>
      <div class="absolute bottom-40 left-20 w-16 h-16 border-4 border-secondary-200/30 rounded-full animate-float-slower"></div>
      <div class="absolute top-1/2 right-40 w-12 h-12 bg-gradient-to-br from-primary-400/10 to-secondary-400/10 rounded-lg rotate-45"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="max-w-5xl mx-auto" x-data="{ 
        activeStep: 1,
        init() {
          this.observeTimeline();
        },
        observeTimeline() {
          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                entry.target.classList.add('animate-in');
                observer.unobserve(entry.target);
              }
            });
          }, { threshold: 0.2 });
          
          document.querySelectorAll('.timeline-item').forEach(item => {
            observer.observe(item);
          });
        }
      }">
        <!-- FlyonUI Timeline with centered style -->
        <ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical timeline-centered">
          <!-- Step 1 -->
          <li class="timeline-item opacity-0 translate-y-8 transition-all duration-700 ease-out">
            <div class="timeline-middle h-16">
              <span class="bg-primary-500/20 flex size-8 items-center justify-center rounded-full">
                <span class="text-primary-500 font-bold">1</span>
              </span>
            </div>
            <div class="timeline-start me-4 mt-8 max-md:pt-2">
              <div class="text-gray-500 text-sm font-normal">Etap pierwszy</div>
            </div>
            <div class="timeline-end ms-4 mb-8">
              <div class="card glass">
                <div class="card-body gap-4">
                  <h5 class="card-title text-xl gradient-text">Planowanie i Projekt</h5>
                  <p class="text-gray-600">
                    Spotykamy się, by poznać Twoje potrzeby i cele biznesowe. Na podstawie zebranych informacji przygotowujemy wycenę i harmonogram prac.
                  </p>
                  <div class="space-y-2 mt-2">
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Analiza potrzeb i celów biznesowych</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Przygotowanie wyceny i harmonogramu</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Projektowanie wyglądu strony</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr class="bg-gradient-to-r from-primary-500 to-secondary-500"/>
          </li>
          
          <!-- Step 2 -->
          <li class="timeline-item opacity-0 translate-y-8 transition-all duration-700 ease-out delay-300 timeline-shift">
            <div class="timeline-middle h-16">
              <span class="bg-secondary-500/20 flex size-8 items-center justify-center rounded-full">
                <span class="text-secondary-500 font-bold">2</span>
              </span>
            </div>
            <div class="timeline-end mt-6 px-1 md:mt-8">
              <div class="text-gray-500 text-sm font-normal">Etap drugi</div>
            </div>
            <div class="timeline-start me-4 mb-8">
              <div class="card glass">
                <div class="card-body gap-4">
                  <h5 class="card-title text-xl gradient-text">Przygotowanie Treści</h5>
                  <p class="text-gray-600">
                    Zbieramy potrzebne materiały, takie jak teksty, zdjęcia i logo. W razie potrzeby pomożemy w ich przygotowaniu.
                  </p>
                  <div class="space-y-2 mt-2">
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Zbieranie materiałów (teksty, zdjęcia, logo)</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Pomoc w przygotowaniu treści</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Dopracowanie szczegółów zgodnie z wizją</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr class="bg-gradient-to-r from-secondary-500 to-primary-500"/>
          </li>
          
          <!-- Step 3 -->
          <li class="timeline-item opacity-0 translate-y-8 transition-all duration-700 ease-out delay-600">
            <div class="timeline-middle h-16">
              <span class="bg-primary-500/20 flex size-8 items-center justify-center rounded-full">
                <span class="text-primary-500 font-bold">3</span>
              </span>
            </div>
            <div class="timeline-start me-4 mt-8 max-md:pt-2">
              <div class="text-gray-500 text-sm font-normal">Etap trzeci</div>
            </div>
            <div class="timeline-end ms-4 mb-8">
              <div class="card glass">
                <div class="card-body gap-4">
                  <h5 class="card-title text-xl gradient-text">Realizacja</h5>
                  <p class="text-gray-600">
                    Tworzymy stronę zgodnie z zatwierdzonym projektem, implementując wszystkie potrzebne funkcjonalności.
                  </p>
                  <div class="space-y-2 mt-2">
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Tworzenie strony zgodnie z projektem</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Implementacja funkcjonalności</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Testowanie na różnych urządzeniach</p>
                    </div>
                  </div>
                  <div class="flex w-full items-center gap-2 mt-2">
                    <div class="progress" role="progressbar" aria-label="Progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                      <div class="progress-bar progress-primary w-[75%]"></div>
                    </div>
                    <span class="text-sm font-medium">75%</span>
                  </div>
                </div>
              </div>
            </div>
            <hr class="bg-gradient-to-r from-primary-500 to-secondary-500"/>
          </li>
          
          <!-- Step 4 -->
          <li class="timeline-item opacity-0 translate-y-8 transition-all duration-700 ease-out delay-900 timeline-shift">
            <div class="timeline-middle h-16">
              <span class="bg-secondary-500/20 flex size-8 items-center justify-center rounded-full">
                <span class="text-secondary-500 font-bold">4</span>
              </span>
            </div>
            <div class="timeline-end mt-6 px-1 md:mt-8">
              <div class="text-gray-500 text-sm font-normal">Etap czwarty</div>
            </div>
            <div class="timeline-start me-4 mb-8">
              <div class="card glass">
                <div class="card-body gap-4">
                  <h5 class="card-title text-xl gradient-text">Uruchomienie</h5>
                  <p class="text-gray-600">
                    Uruchamiamy stronę w internecie, pokazujemy jak nią zarządzać i zapewniamy wsparcie techniczne.
                  </p>
                  <div class="space-y-2 mt-2">
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Uruchomienie strony w internecie</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Szkolenie z zarządzania stroną</p>
                    </div>
                    <div class="flex items-start gap-2">
                      <div class="w-2 h-2 rounded-full bg-primary-500 mt-2 flex-shrink-0"></div>
                      <p class="text-gray-600">Wsparcie techniczne po uruchomieniu</p>
                    </div>
                  </div>
                  <div class="card-actions mt-2">
                    <button class="btn btn-soft btn-sm btn-primary">
                      <span class="icon-[tabler--rocket] max-sm:hidden"></span>
                      Rozpocznij projekt
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </li>
        </ul>

        <!-- Bottom Info Box with animation -->
        <div class="mt-16 relative group max-w-4xl mx-auto opacity-0 translate-y-8 transition-all duration-700 ease-out delay-1200 timeline-item">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
          <div class="relative glass p-8 rounded-2xl">
            <h3 class="text-2xl font-bold mb-8 text-center gradient-text">Podczas całego procesu:</h3>
            <div class="grid md:grid-cols-3 gap-8">
              <div class="flex flex-col items-center text-center gap-4 p-4 rounded-xl hover:bg-white/50 transition-colors">
                <svg class="w-10 h-10 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
                <p class="text-gray-600 text-lg">Masz stały kontakt z naszym zespołem</p>
              </div>
              <div class="flex flex-col items-center text-center gap-4 p-4 rounded-xl hover:bg-white/50 transition-colors">
                <svg class="w-10 h-10 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <p class="text-gray-600 text-lg">Na bieżąco konsultujemy z Tobą postępy</p>
              </div>
              <div class="flex flex-col items-center text-center gap-4 p-4 rounded-xl hover:bg-white/50 transition-colors">
                <svg class="w-10 h-10 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <p class="text-gray-600 text-lg">Możesz wprowadzać poprawki na każdym etapie</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50/30"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-6 py-2 rounded-full bg-primary-100/80 text-primary-700 text-sm font-medium mb-6">
            FAQ
          </span>
          <h2 class="text-4xl font-bold mb-6">
            Najczęściej Zadawane 
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">
              Pytania
            </span>
          </h2>
        </div>

        <div class="space-y-6">
          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative glass p-8 rounded-2xl">
              <h3 class="text-xl font-bold mb-4">Jak długo trwa cały proces?</h3>
              <p class="text-gray-600">Standardowy czas realizacji to 4-6 tygodni, ale może się różnić w zależności od złożoności projektu i szybkości dostarczenia materiałów.</p>
            </div>
          </div>

          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative glass p-8 rounded-2xl">
              <h3 class="text-xl font-bold mb-4">Czy mogę wprowadzać zmiany w trakcie realizacji?</h3>
              <p class="text-gray-600">Tak, na każdym etapie projektu możesz zgłaszać swoje uwagi i sugestie. Elastycznie podchodzimy do zmian w ramach ustalonego zakresu.</p>
            </div>
          </div>

          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
            <div class="relative glass p-8 rounded-2xl">
              <h3 class="text-xl font-bold mb-4">Co jeśli nie mam gotowych treści i zdjęć?</h3>
              <p class="text-gray-600">Nie martw się! Oferujemy pomoc w przygotowaniu profesjonalnych tekstów i doboru odpowiednich zdjęć dla Twojej strony.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto relative">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-600/10 to-secondary-600/10 rounded-2xl blur-2xl"></div>
        <div class="relative glass p-12 rounded-2xl text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 gradient-text">
            Gotowy na Rozpoczęcie Projektu?
          </h2>
          <p class="text-xl text-gray-600 mb-8">
            Skontaktuj się z nami i rozpocznij swoją drogę do sukcesu w internecie
          </p>
          <Button href="/kontakt" variant="cta">
            <span class="inline-flex items-center justify-center gap-2">
              Rozpocznij Projekt
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="w-5 h-5" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round"
              >
                <path d="M7 7h10v10" />
                <path d="M7 17 17 7" />
              </svg>
            </span>
          </Button>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>

<script>
  // Create an Intersection Observer to animate timeline items when they come into view
  document.addEventListener('DOMContentLoaded', () => {
    // Remove any existing animation classes first
    document.querySelectorAll('.timeline-item').forEach(item => {
      item.classList.remove('animate-in');
    });
    
    // Create a new Intersection Observer
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        // Only animate when the element enters the viewport
        if (entry.isIntersecting) {
          // Add a small delay before animation to ensure it's visible during scroll
          setTimeout(() => {
            entry.target.classList.add('animate-in');
          }, 150);
          
          // Stop observing after animation
          observer.unobserve(entry.target);
        }
      });
    }, { 
      threshold: 0.15, // Trigger when 15% of the item is visible
      rootMargin: '0px 0px -10% 0px' // Trigger slightly before the element is fully in view
    });
    
    // Observe all timeline items
    document.querySelectorAll('.timeline-item').forEach(item => {
      observer.observe(item);
    });
  });
</script>

<style>
  /* Enhanced animations */
  @keyframes float-slow {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(10px, 15px) rotate(2deg); }
  }

  @keyframes float-slower {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-15px, -10px) rotate(-2deg); }
  }

  @keyframes grid-fade {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.3; }
  }

  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }

  .animate-float-slower {
    animation: float-slower 12s ease-in-out infinite;
  }

  .animate-grid-fade {
    animation: grid-fade 4s ease-in-out infinite;
  }

  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .glass-dark {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .gradient-text {
    @apply text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600;
  }

  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1) rotate(0);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1) rotate(10deg);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9) rotate(-5deg);
    }
  }

  .animate-blob {
    animation: blob 15s infinite ease-in-out;
  }

  /* Add shimmer effect to cards */
  .glass {
    position: relative;
    overflow: hidden;
  }

  .glass::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 200%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: 0.5s;
    opacity: 0;
  }

  .glass:hover::after {
    left: 100%;
    opacity: 1;
  }

  /* Add gradient borders to steps */
  .step-card {
